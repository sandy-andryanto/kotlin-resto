<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@android:color/white" />

    <!-- Border (stroke) -->
    <stroke
        android:width="1dp"
        android:color="#e5e7e9" />

    <!-- Rounded corners (optional) -->
    <corners android:radius="3dp"/>
</shape>
