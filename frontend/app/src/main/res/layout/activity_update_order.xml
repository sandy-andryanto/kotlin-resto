<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.UpdateOrderActivity">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_auto_start="true"
        app:shimmer_direction="left_to_right"
        app:shimmer_duration="1500">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Simulated image -->
                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:background="#DDDDDD" />

                <!-- Simulated text lines -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Simulated image -->
                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:background="#DDDDDD" />

                <!-- Simulated text lines -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Simulated image -->
                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:background="#DDDDDD" />

                <!-- Simulated text lines -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Simulated image -->
                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:background="#DDDDDD" />

                <!-- Simulated text lines -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Simulated image -->
                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:background="#DDDDDD" />

                <!-- Simulated text lines -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#CCCCCC" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </com.facebook.shimmer.ShimmerFrameLayout>

    <ScrollView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/viewMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:background="@drawable/search_edit_bg"
                        android:drawableStart="@drawable/ic_search"
                        android:hint="Search Menu..."
                        android:inputType="text"
                        android:padding="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:weightSum="3">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAppetizer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Appetizer"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            app:chipBackgroundColor="#0000CD"
                            app:chipIcon="@drawable/ic_home"
                            app:chipIconSize="10sp"
                            app:chipIconTint="@color/white"
                            app:chipIconVisible="false" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipMainCourse"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Main Course"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            app:chipBackgroundColor="#C71585"
                            app:chipIcon="@drawable/ic_coffee"
                            app:chipIconSize="10sp"
                            app:chipIconTint="@color/white"
                            app:chipIconVisible="false" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipDessert"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Dessert"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            app:chipBackgroundColor="#808000"
                            app:chipIcon="@drawable/ic_coffee"
                            app:chipIconSize="10sp"
                            app:chipIconTint="@color/white"
                            app:chipIconVisible="false" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:weightSum="3">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAll"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="All Menu"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            app:chipBackgroundColor="#FFA500"
                            app:chipIcon="@drawable/ic_home"
                            app:chipIconSize="10sp"
                            app:chipIconTint="@color/white"
                            app:chipIconVisible="false" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerProduct"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewOrder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerOrderDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtTotalPaidItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:text="Total Paid"
                        android:textAlignment="center"
                        android:textColor="#008000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewCheckOut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Checkout Order"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="#3c3c3c"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtViewInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Please fill in the fields below to checkout order."
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="#3c3c3c"
                        android:textSize="14sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtOrderNumberLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Order Number"
                        app:startIconDrawable="@drawable/ic_edit"
                        android:paddingHorizontal="2dp"
                        android:layout_marginTop="20dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="#808080"
                        app:startIconTint="#0d6efd"
                        app:startIconCheckable="false"
                        android:backgroundTint="@android:color/white"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtOrderNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:inputType="text" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtOrderTypeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Order Type"
                        app:startIconDrawable="@drawable/ic_edit"
                        android:paddingHorizontal="2dp"
                        android:layout_marginTop="9dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="#808080"
                        app:startIconTint="#0d6efd"
                        app:startIconCheckable="false"
                        android:backgroundTint="@android:color/white"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:text="Dine In"
                            android:id="@+id/txtOrderType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        android:visibility="visible"
                        android:id="@+id/optionTableNumberLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Please Select Your Table Number"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:startIconDrawable="@drawable/ic_edit"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="#808080"
                        app:startIconTint="#0d6efd"
                        app:startIconCheckable="false"
                        android:layout_marginTop="9dp"
                        android:backgroundTint="@android:color/white"
                        >

                        <AutoCompleteTextView
                            android:id="@+id/optionTableNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:drawablePadding="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtCustomerNameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Customer Name"
                        app:startIconDrawable="@drawable/ic_edit"
                        android:paddingHorizontal="2dp"
                        android:layout_marginTop="9dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="#808080"
                        app:startIconTint="#0d6efd"
                        app:startIconCheckable="false"
                        android:backgroundTint="@android:color/white"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtCustomerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtTotalItemLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Total Item"
                        app:startIconDrawable="@drawable/ic_edit"
                        android:paddingHorizontal="2dp"
                        android:layout_marginTop="9dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="#808080"
                        app:startIconTint="#0d6efd"
                        app:startIconCheckable="false"
                        android:backgroundTint="@android:color/white"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:text="0"
                            android:id="@+id/txtTotalItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:inputType="text" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtTotalPaymentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Total Paid"
                        app:startIconDrawable="@drawable/ic_edit"
                        android:paddingHorizontal="2dp"
                        android:layout_marginTop="9dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="#808080"
                        app:startIconTint="#0d6efd"
                        app:startIconCheckable="false"
                        android:backgroundTint="@android:color/white"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:text="0.00"
                            android:id="@+id/txtTotalPayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:inputType="text" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Checkout Order"
                        android:textColor="#FFFFFF"
                        android:enabled="false"
                        android:backgroundTint="#0d6efd"
                        android:paddingVertical="15dp"
                        android:layout_marginTop="5dp" />


                </LinearLayout>

            </FrameLayout>

            <Button
                android:id="@+id/btnCloseOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="1dp"
                android:backgroundTint="#ff6347"
                android:paddingVertical="15dp"
                android:text="Cancel Checkout"
                android:textColor="#FFFFFF" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:menu="@menu/order_menu" />

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>