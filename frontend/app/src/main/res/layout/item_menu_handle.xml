<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="13dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/linear_border"
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Left Column (Image) -->
            <ImageView
                android:id="@+id/menu_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/linear_border"
                android:contentDescription="Menu image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_home" />

            <!-- Right Column (Text Info) -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="#FF4500"
                        android:textStyle="bold"
                        android:id="@+id/menu_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="menu_name"
                        android:textSize="15sp" />

                    <TextView
                        android:textColor="#A0522D"
                        android:textStyle="bold"
                        android:id="@+id/menu_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="menu_price"
                        android:textSize="14sp" />

                    <TextView
                        android:textColor="#2E8B57"
                        android:textStyle="bold"
                        android:id="@+id/menu_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="menu_total"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:backgroundTint="#DAA520"
                android:layout_weight="1"
                android:id="@+id/btnLess"
                android:layout_marginHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Less"
                app:icon="@drawable/ic_remove"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"
                android:textColor="@android:color/white"/>

            <com.google.android.material.button.MaterialButton
                android:backgroundTint="#2E8B57"
                android:layout_weight="1"
                android:id="@+id/btnAdd"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                app:icon="@drawable/ic_add"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"
                android:textColor="@android:color/white"/>

            <com.google.android.material.button.MaterialButton
                android:backgroundTint="#FF0000"
                android:layout_weight="1"
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                app:icon="@drawable/ic_close"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"
                android:textColor="@android:color/white"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>