<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="13dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="5dp">

    <LinearLayout
        android:background="@drawable/linear_border"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:textColor="#696969"
                android:textStyle="normal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order ID"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtOrderId"
                android:textColor="#696969"
                android:textStyle="normal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:textColor="#696969"
                android:textStyle="normal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Type"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtOrderType"
                android:textColor="#696969"
                android:textStyle="normal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:textColor="#696969"
                android:textStyle="normal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Date"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtOrderDate"
                android:textColor="#696969"
                android:textStyle="normal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:textColor="#696969"
                android:textStyle="normal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtCustomerName"
                android:textColor="#696969"
                android:textStyle="normal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:textColor="#696969"
                android:textStyle="normal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Casheir Name"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtCasheirName"
                android:textColor="#696969"
                android:textStyle="normal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:textColor="#696969"
                android:textStyle="normal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Table Number"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtTableNumber"
                android:textColor="#696969"
                android:textStyle="normal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:textColor="#696969"
                android:textStyle="normal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Item"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtTotalItem"
                android:textColor="#696969"
                android:textStyle="normal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:textColor="#228B22"
                android:textStyle="bold"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Paid"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtTotalPaid"
                android:textColor="#228B22"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnViewOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Detail"
            android:textColor="#FFFFF0"
            android:backgroundTint="#778899"
            android:paddingVertical="5dp"
            android:layout_marginTop="15dp" />


    </LinearLayout>

</LinearLayout>